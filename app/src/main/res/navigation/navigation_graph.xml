<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_file"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.setlogger.Fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_workoutSelectionFragment"
            app:destination="@id/workoutSelectionFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/navigation_file"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/workoutSelectionFragment"
        android:name="com.example.setlogger.Fragments.WorkoutSelectionFragment"
        android:label="fragment_workout_selection"
        tools:layout="@layout/fragment_workout_selection" />
</navigation>